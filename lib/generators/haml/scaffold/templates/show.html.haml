- content_for :links do
  %ul.breadcrumps
    %li #{link_to <%= plural_name %>, <%= plural_name %>_path}<span>&gt;</span>

  .links
    = link_to "Nuevo", <%= plural_name %>_path, :class => 'add'
    = link_to "Ver", @<%= singular_name %>, :class => 'show'
    = link_to "Borrar", @<%= singular_name %>, :class => 'delete', :confirm => 'Esta seguro de borrar', :method => :delete

%h1 <%= singular_name %>
%p.links
  = link_to 'Editar', edit_<%= singular_name %>_path(@<%= singular_name %>), :class => 'edit'
  = link_to 'Lista', <%= plural_name %>_path, :class => 'list'

<% for attribute in attributes -%>
.input
  %label <%= attribute %>
  %span= @<%= singular_name %>.<%= attribute.name %>
<% end -%>
